<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FoodPlanner.TextView_Splash" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.FoodPlanner.Card_Auth" parent="CardView">
        <item name="cardBackgroundColor">@color/card_view_background_auth</item>
        <item name="cardCornerRadius">@dimen/auth_card_corner_radius</item>
    </style>

    <style name="Theme.FoodPlanner.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="dialogCornerRadius">30dp</item>
    </style>

    <style name="Theme.FoodPlanner.Dialog_Filter" parent="Theme.FoodPlanner.Dialog">
        <item name="android:windowMinWidthMajor">98%</item>
        <item name="android:windowMinWidthMinor">98%</item>
    </style>

    <style name="Theme.FoodPlanner.TextInputLayout" parent="">
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="boxStrokeColor">@color/selector_text_input_layout_box_stroke</item>
        <item name="endIconTint">@color/selector_text_input_layout_end_icon_tint</item>
    </style>

    <style name="Theme.FoodPlanner.TextInputLayout_Search" parent="">
        <item name="android:background">@drawable/shape_search_view</item>
        <item name="android:backgroundTint">?editTextBackground</item>
        <item name="android:hint">@string/search_recipe</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="startIconDrawable">@drawable/ic_baseline_search_arrow_back_24</item>
        <item name="startIconTint">?attr/colorPrimary</item>
    </style>

    <style name="Theme.FoodPlanner.TextInputEditText_Search" parent="">
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="Theme.FoodPlanner.ImageView_ProfileIcon" parent="">
        <item name="android:elevation">3dp</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:backgroundTint">@color/white_35</item>
        <item name="android:background">@drawable/shape_rounded_corners</item>
        <item name="android:padding">8dp</item>
        <item name="tint">?android:textColorHint</item>
    </style>

    <style name="Theme.FoodPlanner.Button_Profile" parent="TextAppearance.AppCompat.Button">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">68dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:backgroundTint">?android:textColorHint</item>
        <item name="android:drawableTint">?android:textColorHint</item>
        <item name="android:background">@drawable/ripple_rounded_corners</item>
        <item name="drawableRightCompat">@drawable/baseline_keyboard_arrow_right_24</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="tint">?android:textColorHint</item>
    </style>

    <style name="Theme.FoodPlanner.TextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="minHeight">36dp</item>
    </style>

    <style name="Theme.FoodPlanner.ImageButton_Back" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/selector_rounded_ripple</item>
        <item name="android:backgroundTint">@color/card_view_background_auth</item>
        <item name="android:padding">16dp</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_24</item>
    </style>

    <style name="Theme.FoodPlanner.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ripple_selector_circular_checkbox</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="Theme.FoodPlanner.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">150dp</item>
    </style>

    <style name="Theme.FoodPlanner.ShapeableImageView_Rounded_20" parent="">
        <item name="cornerSize">20%</item>
    </style>

    <style name="Theme.FoodPlanner.ShapeableImageView_Rounded_50" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.FoodPlanner.SearchView" parent="">
        <item name="android:background">@drawable/shape_search_view</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>

    <style name="Theme.FoodPlanner.CardView_Meal" parent="Widget.MaterialComponents.CardView">
        <item name="android:elevation">1dp</item>
        <item name="shapeAppearanceOverlay">@style/Theme.FoodPlanner.ShapeAppearanceOverlay</item>
    </style>

    <style name="Theme.FoodPlanner.ShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Theme.FoodPlanner.Label_CancelSearchView" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:textColorHint</item>
    </style>

</resources>